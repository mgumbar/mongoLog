@model List<MongoLog.Models.Worker>
@{ViewBag.Title = "Workers";}
<div class="col-xs-12 col-sm-9 content">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><a href="javascript:void(0);" class="toggle-sidebar"><span class="fa fa-angle-double-left" data-toggle="offcanvas" title="Maximize Panel"></span></a> Workers: @Model.Count().ToString() Found(s)</h3>
        </div>
        <div class="panel-body">
            <div class="content-row">
                <div id="highlight-plugin"></div>
                <div class="row">
                    <div class="col-md-4">
                        <input type="text" class="form-control" placeholder="High light me" id="highlightme1">
                        <div class="clear"></div>
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control" placeholder="High light me" id="highlightme2">
                        <div class="clear"></div>
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control" placeholder="High light me" id="highlightme3">
                        <div class="clear"></div>
                    </div>
                </div>
                <div class="row">

                    <div class="bs-example" data-example-id="contextual-table">
                        <table class="table">
                            <thead> <tr> <th>#</th> <th>Job name</th> <th>created at</th> <th>last execution</th> <th>Status</th> <th>Progress</th>  </tr> </thead>
                            <tbody>
                                @* .active, .success, .info, .warning, .danger *@
                                @foreach (var item in Model)
                    {
                        <tr class="@item.Satus">
                            <td scope="row">@item.Id</td>
                            <td>@item.JobName</td>
                            <td>@item.DateTime.ToString()</td>
                            <td>@item.UpdatedAt.ToString()</td>
                            <td>@item.Exception.ToString()</td>
                            <td>
                                <div class="progress">
                                    <div class="progress-bar progress-bar-@item.Satus active" role="progressbar" aria-valuenow="@item.Progress.ToString()" aria-valuemin="0" aria-valuemax="100" style="width: @item.Progress.ToString()%;">
                                        @item.Progress.ToString() %
                                    </div>
                                </div>
                            </td>
                        </tr>
        }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div><!-- panel body -->
    </div><!-- panel-default -->
</div><!-- panel content-9 -->
